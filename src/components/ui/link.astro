---
interface Props {
  href: string;
  size?: "md" | "lg";
  block?: boolean;
  lstyle?: "outline" | "primary" | "inverted" | "muted";
  class?: string;

  [x: string]: any;
}

const {
  href,
  block,
  size = "lg",
  lstyle = "primary",
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  lg: "px-5 py-2.5",
  md: "px-4 py-2",
};

const styles = {
  outline:
    "bg-slate-800 border-2 border-slate-600 hover:bg-gray-800 text-white shadow-lg",
  primary:
    "bg-white text-black hover:bg-gray-300  border-2 border-transparent shadow-lg",
  inverted:
    "bg-slate-800 hover:bg-gray-900 text-white border-2 border-transparent shadow-lg",
  muted:
    "bg-gray-800 hover:bg-gray-700   border-2 border-transparent shadow-lg",
};
---

<a
  href={href}
  {...rest}
  class:list={[
    "rounded text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200",
    block && "w-full",
    sizes[size],
    styles[lstyle],
    className,
  ]}>
  <slot />
</a>
