---
import Link from "@components/ui/link.astro";
import Container from "../container.astro";
import { t } from "astro-i18n";
---

<style>
    #empower {
        background: radial-gradient(circle at top, rgb(255, 255, 255) 90%, rgb(255, 255, 255, 0.38));
        box-decoration-break: clone;
        -webkit-text-fill-color: transparent;
        -webkit-background-clip: text;
        padding-bottom: 4px;
    }
</style>

<Container>
  <div
    class="bg-slate-900 p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center">
    <h2 class="text-4xl md:text-6xl tracking-tight" id="empower">
      {t("cta.title")}
    </h2>
    <p class="text-slate-200 mt-4 text-lg md:text-xl">
      {t("cta.subtitle")}
    </p>
    <div class="flex mt-5">
      <Link href="https://github.com/ls1intum/Artemis" lstyle="primary">
        {t("cta.button")}
      </Link>
    </div>
  </div>
</Container>

