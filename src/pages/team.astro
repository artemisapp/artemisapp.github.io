---
import { Picture } from "@astrojs/image/components";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import { t } from "astro-i18n";

const response = await fetch("https://artemis.cit.tum.de/public/content/about-us.json", {
  headers: {
    Accept: "application/json"
  }
});
const jsonResponse = await response.json();
const developers = jsonResponse.contributors
  .sort((a, b) => (a.sortBy ?? a.fullName).localeCompare(b.sortBy ?? b.fullName));
const maintainers = jsonResponse.projectManagers;
---

<Layout title={t("team.title")}>
  <Container>
    <Sectionhead>
      <Fragment slot="title">{t("team.title")}</Fragment>
      <Fragment slot="desc">{t("team.subtitle")}</Fragment>
    </Sectionhead>

    <div class="flex flex-col gap-3 mx-auto mt-16">
      <h2 class="font-bold text-3xl">
        {t("team.management.title")}
      </h2>
      <p class="text-lg leading-relaxed text-slate-300">
        {t("team.management.description")}
      </p>
    </div>
    <div class="grid lg:grid-cols-4 sm:grid-cols-2 gap-10 mx-auto max-w-8xl mt-12">
      {
        maintainers.map((teamMemberEntry) => (
          <div class="group">
            <div class="w-full aspect-square">
              <Picture
                src={"https://artemis.cit.tum.de/" + teamMemberEntry.photoDirectory}
                alt={teamMemberEntry.fullName}
                sizes="(max-width: 800px) 100vw, 400px"
                widths={[200, 400]}
                aspectRatio="1:1"
                background="#ffffff"
                fit="cover"
                position="center"
                class="w-full rounded-md rounded shadow-xl"
              />
            </div>

            <div class="mt-4 text-center">
              <h2 class="text-lg text-gray-300">
                {teamMemberEntry.fullName}
              </h2>
              <h3 class="text-sm text-blue-500">
                <a href={teamMemberEntry.website}>{t("team.website")}</a>
              </h3>
            </div>
          </div>
        ))
      }
    </div>
    <div class="flex flex-col gap-3 mx-auto mt-16">
      <h2 class="font-bold text-3xl">
        {t("team.developers.title")}
      </h2>
      <p class="text-lg leading-relaxed text-slate-300">
        {t("team.developers.description")}
      </p>
    </div>
    <div class="grid xl:grid-cols-6 md:grid-cols-3 grid-cols-2 gap-10 mx-auto max-w-8xl mt-12">

      {
        developers.map((teamMemberEntry) => (
          <div class="group">
            <div class="w-full aspect-square">
              <Picture
                src={"https://artemis.cit.tum.de/" + teamMemberEntry.photoDirectory}
                alt={teamMemberEntry.fullName}
                widths={[100, 200, 400]}
                aspectRatio="1:1"
                background="#ffffff"
                fit="cover"
                position="center"
                class="w-full rounded-md rounded shadow-xl"
              />
            </div>

            <h3 class="mt-2 text-lg text-slate-300 text-center">
              {teamMemberEntry.fullName}
            </h3>
          </div>
        ))
      }
    </div>
  </Container>
</Layout>
